<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= title || 'Discord Bot' %></title>
    <link rel="stylesheet" href="/Style/global.css" />
    <style>
        .card { min-width: 320px; max-width: 900px; }
        .profile {
            display: flex;
            gap: 16px;
            align-items: center;
            position: relative;
            padding: 16px;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 16px;
            z-index: 1;
        }

        .background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            filter: brightness(0.5);
            overflow: hidden;
        }
        .background img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .meta { 
            color: var(--muted-text); 
            font-size: 13px; 
            margin-bottom:8px; 
        }
        .stat-grid { display:flex; gap:12px; margin-top:12px; }
        .stat { flex:1; background:#0b1220; padding:8px; border-radius:6px; text-align:center; }
        .games-list {
            display:grid;
            gap:8px;
            margin-top:8px;
            max-height: 55vh;
            overflow: auto;
            padding-right: 8px;
        }
        .games-list::-webkit-scrollbar { width: 8px; }
        .games-list::-webkit-scrollbar-thumb { background:#0b1220; border-radius: 8px; }
        .games-list a { background:#0b1220; color: var(--muted); text-decoration:none; display:flex; align-items:center; gap:16px; padding:4px 8px; border-radius:8px; transition:all 0.2s; }
        .games-list a:hover { background:var(--accent); color:white; transform:translateY(-1px); }
        .activity-time {
            color: var(--time);
            margin-right: 20px;
            font-family: monospace;
            text-align: left;
            transition:all 0.2s;
        }
        .games-list a:hover .activity-time {
            color: white;
        }
    </style>
</head>
<body>
    <div class="card" role="main">
        <header>
            <button type="button" class="btn" onclick="history.back()"><span aria-hidden="true"><</span>Back</button>
            <a type="button" class="btn" href="/">Home</a>
            <div class="logo"><img src="<%= session.avatar %>" alt="avatar"></div>
            <div class="center">
                <h1><%= session.name || 'My Username' %></h1>
                <p style="margin: 0; font-size: 13px;"><span class="muted">ID: </span><%= session.userId %></p>
            </div>
            <a type="button" class="btn" href="/logout">Logout</a>
        </header>

        <div class="grid">
            <section class="panel">
                <div class="profile">
                    <% if (game.splashURL) { %>
                        <div class="background">
                            <img src="<%= game.splashURL %>?size=1024" alt="Background">
                        </div>
                    <% } %>
                    <% if (game.iconURL) { %>
                        <div class="logo-128" style="background: none;" aria-hidden="false">
                            <img src="<%= game.iconURL %>?size=128" alt="User icon">
                        </div>
                    <% } else { %>
                        <div class="logo-128" aria-hidden="false">
                            No Image
                        </div>
                    <% } %>
                    <div class="meta center">
                        <div><h1><%= game.name %></h1></div>
                        <div><span class="muted">ID: </span><%= game.id %></div>
                        <% if (game.id === '438122941302046720') { %>
                            <div><span class="muted">Platform: </span>Xbox</div>
                        <% } %>
                    </div>
                </div>
                <% if (game.description) { %>
                    <div class="meta">
                        <div class="stat-grid">
                            <div class="stat">
                                <div class="muted">Description</div>
                                <div><%= game.description %></div>
                            </div>
                        </div>
                    </div>
                <% } %>
                <div class="games-list">
                    <% if (users && users.length > 0) { %>
                        <% users
                            .sort((a, b) => 
                            Math.floor((new Date(b.stop).getTime() - new Date(b.createdAt).getTime()) / 1000) - 
                            Math.floor((new Date(a.stop).getTime() - new Date(a.createdAt).getTime()) / 1000) )
                            .forEach((user, index) => { 
                        %>
                            <a href="/user/<%= user.id %>">
                                <div>
                                    <h3>#<%= index + 1 %></h3>
                                </div>
                                <div class="logo">
                                    <img src="<%= user.avatar %>" alt="icon">
                                </div>
                                <div class="center">
                                    <h3><%= user.username %></h3>
                                </div>
                                <div class="activity-time">
                                    <div>
                                        <span class="muted">Play:</span>
                                        <% 
                                            const elapsedSec = Math.floor((new Date(user.stop).getTime() - new Date(user.start).getTime()) / 1000);
                                        %>
                                        <%= 
                                            String(Math.floor(elapsedSec / 3600)).padStart(2, '0') + 
                                            ":" + 
                                            String(Math.floor((elapsedSec % 3600) / 60)).padStart(2, '0') + 
                                            ":" + 
                                            String(elapsedSec % 60).padStart(2, '0')
                                        %>
                                    </div>
                                    <div>
                                        <span class="muted">Total Play:</span>
                                        <% 
                                        const fullSec = Math.floor((new Date(user.stop).getTime() - new Date(user.createdAt).getTime()) / 1000);
                                        %>
                                        <%= 
                                        String(Math.floor(fullSec / 3600)).padStart(2, '0') + 
                                        ":" + 
                                        String(Math.floor((fullSec % 3600) / 60)).padStart(2, '0') + 
                                        ":" + 
                                        String(fullSec % 60).padStart(2, '0')
                                        %>
                                    </div>
                                    <div>
                                        <span class="muted">Last Update:</span>
                                        <span class="last-elapsed" data-created-at="<%= user.stop %>">00:00:00</span>
                                    </div>
                                </div>
                            </a>
                        <% }); %>
                    <% } %>
                </div>
            </section>
        </div>
        
        <footer>
            <div><%= owner || 'Bot Owner' %> â€¢ <span id="year"><%= new Date().getFullYear() %></span></div>
        </footer>
    </div>
    <script>
        (function(){
            if (window.__activityTimerInitialized) return;
            window.__activityTimerInitialized = true;
            function updateTimers(){
                document.querySelectorAll('.last-elapsed').forEach(function(el) {
                    var created = new Date(el.getAttribute('data-created-at'));
                    var diff = Math.floor((Date.now() - created.getTime())/1000);
                    var h = Math.floor(diff/3600); diff %= 3600;
                    var m = Math.floor(diff/60);
                    var s = diff % 60;
                    el.textContent = String(h).padStart(2,'0') + ':' + String(m).padStart(2,'0') + ':' + String(s).padStart(2,'0');
                });
            }
            updateTimers();
            setInterval(updateTimers, 1000);
        })();
    </script>
</body>
</html>