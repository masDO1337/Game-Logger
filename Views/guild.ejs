<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= guild.name + ' â€” Guild Profile' %></title>
    <link rel="stylesheet" href="/Style/global.css" />
    <style>
        .card { max-width:1200px; }
        .grid{
            grid-template-columns: 1fr 0.5fr;
            align-items: start;
        }

        .profile {
            display: flex;
            gap: 16px;
        }
        .info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .meta h1 { margin: 0 0 4px 0; font-size: 20px; }
        .meta { color: var(--muted-text); font-size: 13px; margin-bottom:8px; }
        .stat-grid { display:flex; gap:12px; margin-top:12px; }
        .stat { flex:1; background:#0b1220; padding:8px; border-radius:6px; text-align:center; }
        .channel {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 8px;
            background: #0b1220;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 14px;
        }
        .roles, .channels { display:flex; flex-wrap:wrap; gap:8px; margin-top:8px; }
        .role { padding:6px 8px; border-radius:6px; font-size:13px; background:#0b1220; }
        .list a:hover .muted {
            display: none;
        }
    </style>
</head>
<body>
    <div class="card" style="margin-bottom: 36px;" role="header">
        <%- include('Layouts/header', { button: { back: true, home: true, log: true, logout: true }, session }) -%>
    </div>
    <div class="card" role="main">
        <div class="grid">
            <section class="panel" aria-label="Guild profile">
                <div class="profile">
                    <div class="logo-128" aria-hidden="false">
                        <img src="<%= (guild.iconURL && guild.iconURL({ size: 128 })) %>" alt="Guild icon">
                    </div>
                    <div class="meta info">
                        <h1><%= guild.name %></h1>
                        <div><span class="muted">ID:</span> <%= guild.id %></div>
                        <div class="muted"><%= guild.description || '' %></div>
                    </div>
                </div>
                <div class="meta">
                    <div class="stat-grid" role="group" aria-label="Guild stats">
                        <div class="stat">
                            <div class="muted">Members</div>
                            <div><strong><%= guild.memberCount || 'â€”' %></strong></div>
                        </div>
                        <div class="stat">
                            <div class="muted">Channels</div>
                            <div><strong><%= Array.from(guild.channels.cache.values()).filter(c => {return c.type == 0 || c.type == 2}).length || 'â€”' %></strong></div>
                        </div>
                        <div class="stat">
                            <div class="muted">Roles</div>
                            <div><strong><%= (Array.from(guild.roles.cache.values()).length) || 'â€”' %></strong></div>
                        </div>
                    </div>
                </div>
                <div>
                    <% if (guild.roles && guild.roles.cache) { %>
                        <h4 style="margin:16px 0 8px 0">Roles</h4>
                        <div class="roles">
                            <% Array.from(guild.roles.cache.values()).forEach(function(r){ %>
                                <div 
                                    class="role"
                                    <% if (r.color != 0) { %> 
                                    style="color: #<%=r.color.toString(16)%>;"
                                    <% } %>
                                    title="<%= r.name %>"><%= r.name %>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <h4 style="margin:16px 0 8px 0">Roles</h4>
                        <div class="muted">No roles available</div>
                    <% } %>
                </div>
                <div>
                    <% if (guild.channels && guild.channels.cache) { %>
                        <% let channels = Array.from(guild.channels.cache.values()) %>
                        <h3 style="margin:16px 0 8px 0">Text channels</h3>
                        <div class="channels">
                            <% channels.filter(c => {return c.type == 0}).forEach(function(channel){ %>
                                <div class="channel" title="<%= channel.name %>">
                                    <div>#</div>
                                    <div><%= channel.name %></div>
                                </div>
                            <% }) %>
                        </div>
                        <h3 style="margin:16px 0 8px 0">Voice channels</h3>
                        <div class="channels" style="margin-top:8px;">
                            <% channels.filter(c => {return c.type == 2}).forEach(function(channel){ %>
                                <div class="channel" title="<%= channel.name %>">
                                    <div>ðŸ•©</div>
                                    <div><%= channel.name %></div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <h3 style="margin:0 0 8px 0">Channels</h3>
                        <div class="muted">No channels available</div>
                    <% } %>
                </div>
            </section>
            <section class="panel" aria-label="Guild members">
                <h2 style="margin:0 0 8px 0">Members</h2>
                <div class="muted" style="margin-bottom:16px">A list of guild members played:</div>
                <div class="list">
                    <% if (guild.members && guild.members.cache) { %>
                        <% for (const [userId, member] of guild.members.cache){ %>
                            <a href="/user/<%= guild.id +'/'+ userId %>" title="<%= member.user.username %>">
                                <div class="logo-32">
                                    <img src="<%= member.user.displayAvatarURL({ size: 32 }) %>" alt="Member avatar">
                                </div>
                                <div class="center" style="align-items:start; color: #fff;">
                                    <%= member.user.globalName == null ? member.user.username : member.user.globalName %>
                                    <span class="muted"><%= member.user.tag %></span>
                                </div>
                                <% if (playedUsers.includes(userId)) { %>
                                    <div class="logo-32" style="background: none;">
                                        <svg width="32px" height="32px" viewBox="0 0 1024 1024" class="icon"  version="1.1" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M723.2 704c-25.6 0-51.2-12.8-70.4-32L582.4 582.4H435.2l-38.4 64c-19.2 32-51.2 57.6-89.6 57.6-57.6 0-102.4-44.8-102.4-102.4v-12.8V576l25.6-166.4c6.4-70.4 57.6-121.6 128-121.6 32 0 70.4 12.8 89.6 38.4 25.6 0 89.6-6.4 128 0 25.6-25.6 57.6-32 89.6-32 51.2 0 96 32 115.2 83.2v12.8l38.4 179.2c0 6.4 6.4 19.2 6.4 32 0 51.2-44.8 102.4-102.4 102.4z" fill="#8880FE" />
                                            <path d="M716.8 460.8c-12.8 0-19.2-12.8-19.2-19.2s6.4-19.2 19.2-19.2c12.8 0 19.2 12.8 19.2 19.2s-6.4 19.2-19.2 19.2z m-108.8 0c-12.8 0-19.2-12.8-19.2-19.2s6.4-19.2 19.2-19.2c12.8 0 19.2 12.8 19.2 19.2s-6.4 19.2-19.2 19.2z m51.2 57.6c-6.4 0-19.2-6.4-19.2-19.2s6.4-19.2 19.2-19.2 19.2 12.8 19.2 19.2-6.4 19.2-19.2 19.2z m0-115.2c-6.4 0-19.2-6.4-19.2-19.2s6.4-19.2 19.2-19.2 19.2 12.8 19.2 19.2-6.4 19.2-19.2 19.2zM345.6 416h-51.2V448h51.2v51.2h32V448h51.2v-32h-51.2v-51.2h-32z" fill="#FFFFFF" />
                                        </svg>
                                    </div>
                                <% } %>
                            </a>
                        <% } %>
                    <% } else { %>
                        <div class="muted">No members available</div>
                    <% } %>
                </div>
            </section>
        </div>
        <footer>
            <div><%= owner || 'Bot Owner' %> â€¢ <span id="year"><%= new Date().getFullYear() %></span></div>
        </footer>
    </div>
</body>
</html>