<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= username + ' — User Profile' %></title>
    <link rel="stylesheet" href="/Style/global.css" />
    <style>
        .card { max-width:1200px; }
        .grid{
            grid-template-columns: 1.8fr 1fr;
            align-items: start;
        }
        .profile {
            display: flex;
            gap: 16px;
        }
        .meta h1 { margin: 0 0 4px 0; font-size: 20px; }
        .meta { color: var(--muted-text); font-size: 13px; margin-bottom:8px; }
        .stat-grid { display:flex; gap:12px; margin-top:12px; }
        .stat { flex:1; background:#0b1220; padding:8px; border-radius:6px; text-align:center; }
        .badge {
            display: flex;
            align-items: center;
            gap: 6px;
            background: #0b1220;
            padding: 8px;
            border-radius: 6px;
            font-size: 14px;
            color: white;
        }
        .roles { display:flex; flex-wrap:wrap; gap:8px; margin-top:8px; justify-content: center; }
        .role { padding:6px 8px; border-radius:6px; font-size:13px; background:#0b1220; }
        .status-bar {
            display: flex;
            position: relative;
            background: #0b1220;
            width: 100%;
            height: 8px;
            border-radius: 4px;
            overflow: hidden;
            transition: all 0.2s;
        }
        .status-bar:hover {
            height: 24px;
        }
        .status-bar div {
            display: flex;
            height: 100%;
            transition: all 0.2s;
            justify-content: center;
            align-items: center;
        }
        .status-bar div p {
            margin: 0;
            opacity: 0;
            font-size: 12px;
            font-weight: bold;
        }
        .status-bar div:hover {
            width: 100% !important;
        }
        .status-bar div:hover p {
            opacity: 1;
        }
        .online { background:var(--success); }
        .idle { background:var(--warning); }
        .dnd { background:var(--danger); }
        .offline { background:var(--muted); }
        .list {
            max-height: 37vh;
        }
        @media (max-width:800px) {.stat-grid { flex-direction: column; gap: 0;}}
    </style>
</head>
<body>
    <div class="card" style="margin-bottom: 36px;" role="header">
        <%- include('Layouts/header', { button: { back: true, home: true, log: true, logout: true }, session }) -%>
    </div>
    <div class="card" role="main">
        <div class="grid">
            <section class="panel" aria-label="User profile">
                <div class="profile">
                    <div class="logo-128" aria-hidden="false">
                        <img src="<%= (member.user.displayAvatarURL && member.user.displayAvatarURL({ size: 128 })) %>" alt="User icon">
                    </div>
                    <div class="meta center">
                        <div><h1><%= username %></h1></div>
                        <div><span class="muted">Tag: </span><%= member.user.tag %></div>
                        <% if (member.nickname) { %>
                            <div><span class="muted">Nickname: </span><%= member.nickname %></div>
                        <% } %>
                    </div>
                </div>
                <div class="meta">
                    <div class="stat-grid">
                        <div class="stat">
                            <div class="muted">Account Created</div>
                            <div><%= new Date(member.user.createdAt).toLocaleDateString('lt-LT', { year: 'numeric', month: 'numeric', day: 'numeric' }) %></div>
                        </div>
                        <div class="stat">
                            <div class="muted">Guild</div>
                            <div><%= guild.name %></div>
                        </div>
                        <div class="stat">
                            <div class="muted">Guild Joined</div>
                            <div><%= new Date(member.joinedAt).toLocaleDateString('lt-LT', { year: 'numeric', month: 'numeric', day: 'numeric' }) %></div>
                        </div>
                        <div class="stat">
                            <div class="muted">Bot</div>
                            <div><%= member.user.bot ? 'Yes' : 'No' %></div>
                        </div>
                        <% if (member.user.flags.toArray().length > 0) { %>
                            <div class="stat">
                                <div class="muted">Public Flags</div>
                                <div><%= member.user.flags.toArray().join(', ') %></div>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div>
                    <h4 style="margin:16px 0 8px 0">Roles</h4>
                    <% if (member.roles) { %>
                        <div class="roles">
                            <% Array.from(member.roles.cache.values()).forEach(function(r){ %>
                                <% if (r.id != member.guild.id) { %>
                                    <div class="role" <% if (r.color != 0) { %> style="color: #<%=r.color.toString(16)%>;"<% } %> title="<%= r.name %>">
                                        <%= r.name %>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="muted">No roles available</div>
                    <% } %>
                </div>
            </section>
            <section class="panel" aria-label="User activities">
                <div>
                    <div style="display: flex;">
                        <div class="status" style="margin: 0; font-size: 16px;">Status</div>
                        <div class="status" aria-live="polite">
                            <% if (member.presence) { %>
                                <% if (member.presence.status == 'online') { %>
                                    <span class="dot" style="background:var(--success)"></span> Online
                                <% } else if (member.presence.status == 'idle') { %>
                                    <span class="dot" style="background:var(--warning)"></span> Idle
                                <% } else if (member.presence.status == 'dnd') { %>
                                    <span class="dot" style="background:var(--danger)"></span> Do Not Disturb
                                <% } else { %>
                                    <span class="dot" style="background:var(--muted)"></span> Offline
                                <% } %>
                            <% } else { %>
                                <span class="dot" style="background:var(--muted)"></span> Offline
                            <% } %>
                        </div>
                    </div>
                    <% if (statusPercentages && statusTimes) { %>
                        <div style="height: 24px;">
                            <div class="status-bar">
                                <% const names = ["Online","Idle","Do Not Disturb","Offline"]; %>
                                <% ["online","idle","dnd","offline"].forEach((name, index) => { %>
                                    <div class="<%= name %>" style="width: <%= statusPercentages[name] %>%" title="<%= names[index] %> <%= statusPercentages[name] %>%">
                                        <p><%= names[index] %> <%= statusPercentages[name] %>%  
                                            <% 
                                            const elapsedSec = Math.floor(statusTimes[name] / 1000);
                                            %>
                                            <%= 
                                            String(Math.floor(elapsedSec / 3600)).padStart(2, '0') + 
                                            ":" + 
                                            String(Math.floor((elapsedSec % 3600) / 60)).padStart(2, '0') + 
                                            ":" + 
                                            String(elapsedSec % 60).padStart(2, '0')
                                            %>
                                        </p>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                </div>
                <% if (member.presence && member.presence.activities.length > 0) { %>
                    <div>
                        <h4 style="margin: 16px 0 8px 0;">Activities</h4>
                        <div class="roles">
                            <% member.presence.activities.forEach(function(activity) { %>
                                <div class="role" title="<%= activity.name %>">
                                    <div>
                                        <%= activity.name %>
                                        <span class="activity-time timer" data-created-at="<%= activity.createdAt %>">
                                        </span>
                                    </div>
                                    <div><span class="muted">Type:</span>
                                        <% const types = ["Playing","Streaming","Listening","Watching","Custom","Competing","Hanging Out"]; %>
                                        <%= types[activity.type] || "Unknown" %>
                                    </div>
                                    <% if (activity.details) {%>
                                        <div><span class="muted">Details:</span><%= activity.details %></div>
                                    <% } %>
                                    <% if (activity.state) {%>
                                        <div><span class="muted">State:</span><%= activity.state %></div>
                                    <% } %>

                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
                <% if (!member.user.bot) { %>
                    <div>
                        <% if (history && history.length > 0) { %>
                            <h4 style="margin: 16px 0 8px 0;">History Of Games</h4>
                            <div class="list">
                                <div class="text center">
                                    <div class="activity-time">
                                        <span class="muted">Total time of games palyed:</span>
                                        <% 
                                        const sum = history.reduce((a, game) => {
                                            a.s += game.s;
                                            a.m += game.m + Math.floor(a.s / 60); 
                                            a.s %= 60; 
                                            a.h += game.h + Math.floor(a.m / 60);
                                            a.m %= 60;

                                            return a;
                                        }, { h: 0, m: 0, s: 0 });
                                        %>
                                        <%= String(sum.h).padStart(2, '0') + ":" + String(sum.m).padStart(2, '0') + ":" + String(sum.s).padStart(2, '0') %>
                                    </div>
                                </div>
                                <% history.forEach(function(activity) { %>
                                    <a href="/game/<%=(activity.gameDB || "") %>">
                                        <div class="center" style="align-items: start;"><%= activity.name %></div>
                                        <div class="activity-time">
                                            <div>
                                                <span class="muted">Last Played:</span>
                                                <% const elapsedSec = Math.floor((new Date(activity.stop).getTime() - new Date(activity.start).getTime()) / 1000); %>
                                                <%= String(Math.floor(elapsedSec / 3600)).padStart(2, '0') + ":" + String(Math.floor((elapsedSec % 3600) / 60)).padStart(2, '0') + ":" + String(elapsedSec % 60).padStart(2, '0') %>
                                            </div>
                                            <div>
                                                <span class="muted">Total Played:</span>
                                                <%= String(activity.h).padStart(2, '0') + ":" + String(activity.m).padStart(2, '0') + ":" + String(activity.s).padStart(2, '0') %>
                                            </div>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="muted" style="margin-top: 12px;">No history activities available</div>
                        <% } %>
                    </div>
                <% } %>
            </section>
        </div>
        <footer>
            <div><%= owner || 'Bot Owner' %> • <span id="year"><%= new Date().getFullYear() %></div>
        </footer>
    </div>
    <script src="/Scripts/timer.js"></script>
</body>
</html>